.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5); 
  position: fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:10;
}
.product-select{
    width: 100%;
    background: #fff;
    position: fixed;
    bottom:0;
    left:0;
    z-index:999;
    transform: translateY(200%);
    transition: all 0.4s;
}
.product-select.active{
    transform: translateY(0);
    transition: all 0.4s;
}
