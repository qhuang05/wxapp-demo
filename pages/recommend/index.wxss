.headcont{
    height: 500rpx;
    text-align: center;
    background:wheat;
}
.fixed-menu{
    width:100%;
    height: 100rpx;
    border-bottom:1px solid #ccc;
    background: greenyellow;
    color:#fff;
    z-index:999;
}
.weui-sticky__fixed{
    width:100%;
}

.weui-tabs-bar__wrp {
    border-bottom: 1px solid #eee;
    margin-top: 10px;
}

.weui-tabs-swiper {
    width: 100%;
    height: 100px;
}

.tab-content {
    height: 100px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 40rpx;
}

.weui-tabs-bar__title {
    margin: 0px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}