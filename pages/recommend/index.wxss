.head-section{
    height: 500rpx;
    text-align: center;
    background:wheat;
}
.fixed-tabs{
    width:100%;
}
.weui-sticky__fixed{
    width:100%;
}

.weui-tabs-bar__wrp {
    border-bottom: 1px solid #eee;
}

.weui-tabs-swiper {
    width: 100%;
}

.weui-tabs-bar__title {
    margin: 5px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}
swiper{
    height: auto;
}

.product-list{
    margin:40rpx;
    /* min-height: calc(100vh - 240rpx); */
}
.product-item{
    width: calc((100% - 40rpx)/2);
    margin-bottom: 40rpx;
}
.product-item:nth-child(odd){
    margin-right: 40rpx;
}
.product-item .img-box{
    width: 100%;
    height: 300rpx;
    border: 1px solid #efefef;
    border-radius:8rpx;
}
.product-item image{
    width:900%;
    height:90%;
}
.product-item .info{
    text-align:center;
}
.product-item .color-red{
    color: red;
}
.loading{
    text-align: center;
    padding: 20rpx 0;
}

.menu-list{
  display: flex;
  height: 120rpx;
}
.menu-list>view{
  padding: 0 40rpx;
}